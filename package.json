{
  "name": "ots-turborepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspace": [
    "frontend",
    "backend",
    "ui"
  ],
  "scripts": {
    "build-all": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "deploy-fe": "turbo run build --filter=frontend^...",
    "deploy-be": "turbo run build --filter=backend"
  },
  "turbo": {
    "pipeline": {
      "dev": {
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "build/**",
          ".ui/**"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": [],
        "inputs": [
          "src/**/*.tsx",
          "src/**/*.ts",
          "test/**/*.ts",
          "test/**/*.tsx"
        ]
      },
      "lint": {
        "outputs": []
      },
      "deploy": {
        "dependsOn": [
          "build",
          "test",
          "lint"
        ],
        "outputs": []
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "pnpm": "^7.5.0",
    "turbo": "^1.3.1"
  }
}
